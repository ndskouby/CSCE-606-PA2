<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
  }
  .movie-details {
    width: 80%;
    margin: 20px auto;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
  }
  .movie-details h2 {
    color: #333;
    text-align: center;
    margin-bottom: 20px;
  }
  .actions {
    text-align: center;
    margin-top: 20px;
  }
  .actions a, .actions input[type="submit"] {
    display: inline-block;
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s;
    margin-right: 10px;
  }
  .actions a:hover, .actions input[type="submit"]:hover {
    background-color: #45a049;
  }
</style>

<p style="color: green"><%= notice %></p>

<div class="movie-details">
  <%= render @movie %>
</div>

<div class='actions'>
  <%= link_to "Edit this movie", edit_movie_path(@movie) %> |
  <%= link_to "Back to movies", movies_path %>

  <%= button_to "Destroy this movie", @movie, method: :delete %>
</div>
